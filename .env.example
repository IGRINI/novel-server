ENV=development
LOG_LEVEL=debug

# Настройки сервера
SERVER_PORT=8080
SERVER_BASE_PATH=/api
SERVER_READ_TIMEOUT=15
SERVER_WRITE_TIMEOUT=15
SERVER_IDLE_TIMEOUT=60

# Настройки базы данных PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=novel
DB_SSL_MODE=disable
DB_MAX_CONNECTIONS=10
DB_MAX_IDLE_MINUTES=5

# Настройки API для нейросети
AI_API_KEY=your-api-key-here
AI_MODEL=gpt-3.5-turbo
AI_BASE_URL=https://api.openai.com/v1
AI_TIMEOUT=60
AI_MAX_ATTEMPTS=3

# Настройки CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Настройки JWT и безопасности
JWT_SECRET=your-256-bit-secret
PASSWORD_SALT=default-password-salt
JWT_ACCESS_TOKEN_TTL=60  # время жизни access токена в минутах
JWT_REFRESH_TOKEN_TTL=168  # время жизни refresh токена в часах (7 дней)

# Настройки Auth Service
AUTH_SERVICE_URL=http://localhost:8081
SERVICE_ID=novel-service
AUTH_SERVICE_API_KEY=your-service-api-key
AUTH_SERVICE_TIMEOUT=5s  # В формате Go time.Duration 